        let currentIdx = 0;

        function updateSlide() {
            const item = newsData[currentIdx];
            document.getElementById('slideBg').className = `clickable-slide md:w-1/2 bg-gradient-to-br ${item.bg} p-12 flex flex-col justify-center items-center text-white text-center relative`;
            document.getElementById('slideIcon').innerText = item.icon;
            document.getElementById('slideTitle').innerText = item.title;
            document.getElementById('slideSub').innerText = item.sub;
            document.getElementById('slideMainDesc').innerText = item.mainDesc;
            document.getElementById('slideBullet').innerHTML = item.bullet;
            document.getElementById('slidePage').innerText = `PAGE ${currentIdx + 1} OF ${newsData.length}`;
        }

        function nextSlide() { currentIdx = (currentIdx + 1) % newsData.length; updateSlide(); }
        function prevSlide() { currentIdx = (currentIdx - 1 + newsData.length) % newsData.length; updateSlide(); }
    </script>
