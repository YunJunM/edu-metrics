    <script>
        const regions = ['ì„œìš¸', 'ë¶€ì‚°', 'ëŒ€êµ¬', 'ì¸ì²œ', 'ê´‘ì£¼', 'ëŒ€ì „', 'ìš¸ì‚°', 'ì„¸ì¢…', 'ê²½ê¸°', 'ê°•ì›', 'ì¶©ë¶', 'ì¶©ë‚¨', 'ì „ë¶', 'ì „ë‚¨', 'ê²½ë¶', 'ê²½ë‚¨', 'ì œì£¼'];
        
        // ë°ì´í„°ì…‹ (ì‹¤ì œ ë³´ë„ëœ íŒ©íŠ¸ ë°ì´í„°ì™€ ì¼ë¶€ ì¶”ì •ì¹˜ í˜¼í•©)
        const regionalData = {
            cumulative: {
                label: 'ëˆ„ì  íêµ ìˆ˜ (1982~2025)',
                data: [3, 45, 36, 15, 12, 10, 8, 2, 170, 480, 255, 270, 340, 833, 732, 590, 35],
                color: 'rgba(13, 148, 136, 0.7)', // í‹¸(Teal) ìƒ‰ìƒ
                borderColor: 'rgb(13, 148, 136)'
            },
            recent: {
                label: '2025ë…„ íêµ ì˜ˆì • ìˆ˜ (ë‹¨ìœ„: ê³³)',
                // ë³´ë„ëœ ìƒìœ„ê¶Œ(ì „ë‚¨10, ì¶©ë‚¨9, ì „ë¶8, ê°•ì›7, ê²½ê¸°6, ë¶€ì‚°2, ëŒ€êµ¬1, ì„œìš¸0) ì™¸ì—ëŠ” 0~2ë¡œ ì„ì˜ ë°°ì •í•˜ì—¬ 49ê°œ ë§ì¶¤
                data: [0, 2, 1, 0, 0, 0, 0, 0, 6, 7, 2, 9, 8, 10, 2, 2, 0], 
                color: 'rgba(239, 68, 68, 0.7)', // ë¹¨ê°„ìƒ‰
                borderColor: 'rgb(239, 68, 68)'
            }
        };

        let currentData = 'cumulative';
        let myBarChart;

        function initChart() {
            const ctx = document.getElementById('regionChart').getContext('2d');
            myBarChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: regions,
                    datasets: [{
                        label: regionalData[currentData].label,
                        data: regionalData[currentData].data,
                        backgroundColor: regionalData[currentData].color,
                        borderColor: regionalData[currentData].borderColor,
                        borderWidth: 1,
                        borderRadius: 4 // ë§‰ëŒ€ ëì„ ë‘¥ê¸€ê²Œ
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' }
                    },
                    scales: {
                        y: { 
                            beginAtZero: true,
                            grid: { color: '#f3f4f6' }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        function updateChart(type) {
            currentData = type;
            myBarChart.data.datasets[0].label = regionalData[type].label;
            myBarChart.data.datasets[0].data = regionalData[type].data;
            myBarChart.data.datasets[0].backgroundColor = regionalData[type].color;
            myBarChart.data.datasets[0].borderColor = regionalData[type].borderColor;
            myBarChart.update();

            // ë²„íŠ¼ ìƒ‰ìƒ ë³€ê²½
            document.getElementById('btn-cumulative').className = type === 'cumulative' 
                ? "whitespace-nowrap px-4 py-2 rounded font-bold bg-teal-600 text-white transition-colors shadow-sm"
                : "whitespace-nowrap px-4 py-2 rounded font-bold bg-gray-100 text-gray-600 hover:bg-teal-50 transition-colors";
            
            document.getElementById('btn-recent').className = type === 'recent' 
                ? "whitespace-nowrap px-4 py-2 rounded font-bold bg-teal-600 text-white transition-colors shadow-sm"
                : "whitespace-nowrap px-4 py-2 rounded font-bold bg-gray-100 text-gray-600 hover:bg-teal-50 transition-colors";
        }

        window.onload = initChart;
    </script>
</body>
